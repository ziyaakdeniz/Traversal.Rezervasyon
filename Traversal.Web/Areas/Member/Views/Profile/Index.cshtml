@model Traversal.Web.Areas.Member.Models.UserEditVM
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<h1>Profil DÜzenleme Sayfası</h1>

<form method="post" enctype="multipart/form-data">
    @Html.Label("Adınız:")
    <input type="text" asp-for="name" class="form-control"/>
    <br />
    @Html.Label("Soyadınız:")
    <input type="text" asp-for="surname" class="form-control" />
    <br />
    @Html.Label("Email:")
    <input type="text" asp-for="mail" class="form-control" />
    <br />
    @Html.Label("Telefon No:")
    <input type="text" asp-for="phonenumber" class="form-control" />
    <br />
    @Html.Label("Şifreniz:")
    <input type="text" asp-for="password" class="form-control" />
    <br />
    @Html.Label("Şifre Tekrar:")
    <input type="text" asp-for="confirmpassword" class="form-control" />
    <br />
    <div class="form-group">
        <label>Resim Seçin</label>
        <input  type="file" asp-for="ImageFile"/>
    </div>
    <br />
    <button class="btn btn-primary">Güncelle</button>

</form>

